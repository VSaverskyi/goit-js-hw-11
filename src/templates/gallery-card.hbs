{{#each this}}
<a class="gallery__link" href="{{largeImageURL}}">
<div class="photo-card">
    <img class="gallery-image" src="{{webformatURL}}" alt="{{tags}}" loading="lazy" width="640" height="427"/>
    <div class="info">
        <p class="info-item">
            <b>Likes: {{likes}}</b>
        </p>
        <p class="info-item">
            <b>Views: {{views}}</b>
        </p>
        <p class="info-item">
            <b>Comments: {{comments}}</b>
        </p>
        <p class="info-item">
            <b>Downloads: {{downloads}}</b>
        </p>
    </div>
</div>
</a>
{{/each}}